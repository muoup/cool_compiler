#!/bin/bash
input="5 5 5 5"

if [ "$#" -gt 1 ]; then
    input=$2
fi

dune_output=$(cat "test_input" | ./run-full "$1")

if [ "$?" -ne 0 ]; then
    echo "Test failed: $1"
    echo "Dune output: "
    echo $dune_output
    exit 1
fi

cool_output=$(cat "test_input" | cool "$1.cl")

if [ "$cool_output" != "$dune_output" ]; then
    echo "Test failed: $1"
    echo "Expected: $(echo $cool_output | xxd -p)"
    echo $cool_output
    echo "Got:      $(echo $dune_output | xxd -p)"
    echo $dune_output

    exit 1
fi

echo "Expected: $(echo $cool_output | xxd -p)"
echo $cool_output
echo "Got:      $(echo $dune_output | xxd -p)"
echo $dune_output

rm "$1".cl-type
rm "$1".s

echo "Test passed: $1"